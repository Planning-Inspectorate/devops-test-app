{
	"name": "template-app-service",
  "version": "0.0.0",
  "description": "Basic Hello World app for testing",
  "main": "index.js",
	"private": true,
	"workspaces": [
		"app/*"
	],
	"engines": {
		"node": ">=18.0.0 <19.0.0"
	},
  "type": "module",
	"scripts": {
    "build": "node src/util/build.js",
    "start": "npm run build && node src/server.js",
    "dev": "nodemon --watch src --ext js,scss,html,njk --exec \"npm run start\"",
    "test": "node --test"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "*",
    "dotenv": "*",
    "express": "*",
    "express-validator": "*",
    "govuk-frontend": "*",
    "nunjucks": "*",
    "pino": "*",
    "pino-pretty": "*"
  },
  "devDependencies": {
    "nodemon": "*",
    "sass": "*"
  }
}
