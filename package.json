{
	"name": "devops-test",
	"version": "0.0.0",
	"description": "Basic Hello World app for testing",
	"private": true,
	"main": "src/server.ts",
	"workspaces": [
		"app"
	],
	"type": "module",
	"scripts": {
		"build": "node app/src/util/build.ts",
		"start": "npm run build && node app/src/server.ts",
		"dev": "nodemon --watch app/src --ext js,ts,scss,html,njk --exec \"npm run start\"",
		"test": "node --test"
	},
	"license": "MIT",
	"dependencies": {
		"body-parser": "^2.2.0",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-validator": "^7.3.0",
		"govuk-frontend": "^5.13.0",
		"nunjucks": "^3.2.4",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.2"
	},
	"devDependencies": {
		"@types/express": "^5.0.5",
		"@types/node": "^24.9.1",
		"@types/nunjucks": "^3.2.6",
		"nodemon": "^3.1.10",
		"sass": "^1.93.2",
		"typescript": "^5.9.3"
	}
}
