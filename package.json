{
	"name": "template-app-service",
	"private": true,
	"workspaces": [
		"app/*"
	],
	"engines": {
		"node": ">=18.0.0 <19.0.0"
	},
	"scripts": {
		"commitlint": "commitlint --from=$(git rev-parse $(git cherry origin/main | head -n 1 | cut -c 3-)^1)",
		"format": "prettier --write \"**/*.{js}\"",
		"lint:js": "npx eslint .",
		"lint:js:fix": "npx eslint . --fix",
		"prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
		"build": "node src/util/build.js",
		"start": "npm run build && node src/server.js",
		"dev": "nodemon --watch src --ext js,scss,html,njk --exec \"npm run start\"",
		"test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest",
		"app": "npm run dev --workspace=template-app",
		"c4": "docker pull structurizr/lite && docker run -it --rm -p 8082:8080 -v $PWD:/usr/local/structurizr structurizr/lite"
	},
	"dependencies": {
		"@badeball/cypress-cucumber-preprocessor": "20.0.1",
		"cypress": "13.6.4",
		"got": "^12.5.2",
		"joi": "^17.7.0",
		"node-cache": "^5.1.2",
		"nodemon": "3.0.3",
		"pins-data-model": "github:Planning-Inspectorate/data-model#1.7.3"
	},
	"devDependencies": {
		"@commitlint/cli": "17.0.1",
		"@commitlint/config-conventional": "17.0.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv-cli": "^7.3.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-jest": "^27.2.1",
		"husky": "^8.0.0",
		"lint-staged": "^12.4.1",
		"lodash": "^4.17.21",
		"prettier": "^2.6.2",
		"prettier-plugin-prisma": "^4.13.0",
		"rimraf": "^3.0.2",
		"turbo": "1.2.14",
		"typescript": "^4.6.4"
	},
	"packageManager": "npm@8.5.1",
	"lint-staged": {
		"*.js": [
			"eslint --fix"
		],
		"*.{js,ts,json,md,prisma}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
