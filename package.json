{
	"name": "back-office",
	"private": true,
	"workspaces": [
		"app/*",
		"app/src/*",
	],
	"engines": {
		"node": ">=18.0.0 <19.0.0"
	},
	"dependencies": {
		"@badeball/cypress-cucumber-preprocessor": "20.0.1",
		"cypress": "13.6.4",
		"got": "^12.5.2",
		"joi": "^17.7.0",
		"node-cache": "^5.1.2",
		"nodemon": "3.0.3",
		"pins-data-model": "github:Planning-Inspectorate/data-model#1.7.3"
	},
	"devDependencies": {
		"@commitlint/cli": "17.0.1",
		"@commitlint/config-conventional": "17.0.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv-cli": "^7.3.0",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-jest": "^27.2.1",
		"husky": "^8.0.0",
		"lint-staged": "^12.4.1",
		"lodash": "^4.17.21",
		"prettier": "^2.6.2",
		"prettier-plugin-prisma": "^4.13.0",
		"rimraf": "^3.0.2",
		"turbo": "1.2.14",
		"typescript": "^4.6.4"
	},
	"packageManager": "npm@8.5.1",
	"lint-staged": {
		"*.js": [
			"eslint --fix"
		],
		"*.{js,ts,json,md,prisma}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
